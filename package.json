{
  "name": "@byalejandradesign/root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/njmyers/byalejandradesign.com.git"
  },
  "license": "ISC",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "@byalejandradesign/web/**/**",
      "**/flow-bin"
    ]
  },
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap && lerna link",
    "postbootstrap": "run-s build",
    "prebuild": "lerna run build --scope=@byalejandradesign/{server-env,checkout-objects}",
    "build": "lerna run build --ignore=@byalejandradesign/{server-env,checkout-objects}",
    "prebuild-web": "run-s bootstrap",
    "build-web": "lerna run build-web",
    "predeploy": "lerna run deploy --scope=@byalejandradesign/{server-env,checkout-objects}",
    "deploy": "lerna run deploy --parallel --ignore=@byalejandradesign/{server-env,checkout-objects}",
    "develop": "lerna run --parallel develop",
    "develop:servers": "lerna run --parallel --ignore=@byalejandradesign/web develop",
    "install-types": "node scripts/install-types.js",
    "prestage": "lerna clean --yes && lerna bootstrap && lerna run stage --scope=@byalejandradesign/{server-env,checkout-objects}",
    "stage": "lerna run stage --parallel --ignore=@byalejandradesign/{server-env,checkout-objects}",
    "symlink-types": "flow-mono create-symlinks .flowconfig",
    "test": "jest --watchAll",
    "prettier": "prettier 'packages/**/*.{.test.js,.stories.js,js,jsx,json}' --write"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@njmyers/babel-runtime-files": "^0.0.4",
    "@njmyers/directory": "^0.0.13",
    "autoprefixer": "^9.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-macros": "^2.4.2",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "flow-bin": "^0.83.0",
    "flow-mono-cli": "^1.4.2",
    "flow-typed": "^2.5.1",
    "jest": "^23.6.0",
    "lerna": "^3.3.2",
    "netlify": "^2.2.0",
    "netlify-cli": "^2.1.3",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "react": "^16.5.2",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.5.2",
    "react-test-renderer": "^16.4.1",
    "redux-mock-store": "^1.5.3",
    "regenerator": "^0.13.2",
    "regenerator-runtime": "^0.12.1",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-replace": "^2.1.0",
    "shx": "^0.3.2",
    "sinon": "^6.0.1",
    "smalldash": "^1.1.20"
  }
}
